<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="timesheet_select_create_action_window">
            <field name="name">自创工时</field>
            <field name="res_model">timesheet.select_create</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.ui.view" id="timesheet_select_create_view_tree">
            <field name="name">timesheet.select_create.view_tree</field>
            <field name="model">timesheet.select_create</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree editable="top" string="test" import="false" default_order="id desc">
                    <field name="department_id"/>
                    <field name="employee_id"/>
                    <field name="timesheet_type"/>
                    <field name="project_id"/>
                    <field name="task_id"/>
                    <field name="date" string="填充日期（按月2019-01, 按日期2019-01-01）"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window.view" id="test_select_create">
            <field name="view_mode">tree</field>
            <field name="view_id" ref="timesheet_select_create_view_tree"/>
            <field name="act_window_id" ref="timesheet_select_create_action_window"/>
        </record>


        <menuitem id="timesheet_select_create_menu" name="自创工时" parent="timesheet_menu_root"
                  groups="group_timesheet_manager" action="timesheet_select_create_action_window" sequence="99"/>

    </data>



</odoo>
