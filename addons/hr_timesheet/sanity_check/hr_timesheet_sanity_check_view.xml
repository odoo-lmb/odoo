<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="act_hr_timesheet_sanity_check_last_week" model="ir.actions.act_window" >
            <field name="name">sanity_check</field>
            <field name="res_model">account.analytic.line</field>
            <field name="view_mode">tree</field>
            <field name="domain">[('project_id', '!=', False),
                ('date',"&gt;=",(context_today() - datetime.timedelta(days=context_today().weekday() + 7)).strftime('%Y-%m-%d')),
                ('date',"&lt;=",(context_today() - datetime.timedelta(days=context_today().weekday() +1)).strftime('%Y-%m-%d'))]</field>
             <field name="context">{
                "search_default_week":1,
            }</field>
            <field name="search_view_id" ref="hr_timesheet_line_search"/>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Record a new activity
              </p><p>
                You can register and track your workings hours by project every
                day. Every time spent on a project will become a cost and can be re-invoiced to
                customers if required.
              </p>
            </field>
        </record>

