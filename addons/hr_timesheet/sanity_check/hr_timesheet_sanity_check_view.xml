            <field name="name">sanity_check</field>
            <field name="res_model">account.analytic.line</field>
            <field name="view_mode">tree</field>
            <field name="domain">[('project_id', '!=', False),
                ('date','&lt;', time.strftime('%Y-%m-01')),('date','&gt;=',  (context_today() - relativedelta(months=1)).strftime('%Y-%m-01') ) ]</field>
             <field name="context">{
                "search_default_week":1,
